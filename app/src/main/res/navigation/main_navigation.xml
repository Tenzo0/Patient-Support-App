<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/recommendationsFragment">

    <fragment
        android:id="@+id/glossaryFragment"
        android:name="ru.poas.patientassistant.client.ui.patient.glossary.GlossaryFragment"
        android:label="@string/glossary" >
        <action
            android:id="@+id/action_glossaryFragment_to_glossaryDetailsFragment"
            app:destination="@id/glossaryDetailsFragment" >
            <argument
                android:name="title"
                app:argType="string" />
            <argument
                android:name="content"
                app:argType="string" />
        </action>

    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.poas.patientassistant.client.ui.patient.profile.ProfileFragment"
        android:label="@string/profile" />
    <fragment
        android:id="@+id/medicinesFragment"
        android:name="ru.poas.patientassistant.client.ui.patient.drugs.DrugsFragment"
        android:label="@string/medicines" />
    <fragment
        android:id="@+id/recommendationsFragment"
        android:name="ru.poas.patientassistant.client.ui.patient.recommendations.RecommendationsFragment"
        android:label="@string/recommendations" />
    <fragment
        android:id="@+id/glossaryDetailsFragment"
        android:name="ru.poas.patientassistant.client.ui.patient.glossary.GlossaryDetailsFragment"
        android:label="@string/glossary" >

        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="content"
            app:argType="string" />
        <action
            android:id="@+id/action_glossaryDetailsFragment_to_glossaryFragment"
            app:destination="@id/glossaryFragment"
            app:popUpTo="@id/glossaryFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <activity
        android:id="@+id/loginActivity"
        android:name="ru.poas.patientassistant.client.ui.login.LoginActivity"
        android:label="LoginActivity" />

</navigation>