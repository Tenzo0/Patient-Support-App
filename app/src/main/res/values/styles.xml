<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/loginPrimary</item>
        <item name="android:statusBarColor">@color/loginBackgroundGradientBegin</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat</item>
        <item name="colorPrimary">@color/mainPrimary</item>
        <item name="colorPrimaryDark">@color/mainPrimaryDark</item>
        <item name="colorAccent">@color/mainAccent</item>
        <item name="android:textColor">@color/textColorOnLight</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="snackbarStyle">@style/snackbarStyle</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:windowBackground">@color/veryLightGray</item>
        <item name="android:actionMenuTextColor">@color/textColorOnLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="blueButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:colorBackground">@color/mainAccent</item>
    </style>

    <style name="snackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/mainBackground</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/textColorOnDark</item>
    </style>

</resources>
