<resources>

    <style name="LoginTheme" parent="MainTheme">
        <item name="colorPrimary">@color/loginPrimary</item>
        <item name="android:statusBarColor">@color/loginBackgroundGradientBegin</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <style name="MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/mainPrimary</item>
        <item name="colorPrimaryDark">@color/mainPrimaryDark</item>
        <item name="colorAccent">@color/mainPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/mainPrimaryDark</item>
        <item name="colorError">@color/error</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="snackbarStyle">@style/snackbarStyle</item>
    </style>

    <style name="snackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/mainBackground</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
