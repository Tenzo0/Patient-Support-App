<resources>

    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/loginBackgroundGradientBegin</item>
    </style>

    <style name="MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/mainPrimary</item>
        <item name="colorPrimaryDark">@color/mainPrimaryDark</item>
        <item name="colorAccent">@color/mainAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/mainPrimaryDark</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
